-- empty ifs
if true {}
if false {} else {}
if false {} else if true {} else {}

-- basic ifs
if 1 == 1 {
  42; -- log: 42
}

if 50 > 20 + 10 {
  "ok"
} else {
  "not ok"
} -- log: ok

if "yip" == "yop" {
  0
} else if "zup" == "zup" {
  1
} else {
  2
} -- log: 1

-- conditionals with blocks
if ({ 1000; true }) { -- log: 1000
  "nice"; -- log: nice
}

if 3.14 != 3.14 {
  false;
} else if ({ "whatever"; true }) { -- log: whatever
  "got it"; -- log: got it
}
